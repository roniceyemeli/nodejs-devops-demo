{
  "name": "nodejs-devops-demo",
  "version": "1.0.1",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:watch": "NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install"
  },
  "keywords": [
    "nodejs",
    "devops",
    "demo",
    "ci-cd"
  ],
  "author": "",
  "license": "ISC",
  "description": "Node.js DevOps Demo - A complete example with CI/CD, linting, and commit hooks",
  "dependencies": {
    "express": "^5.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "husky": "^9.1.7",
    "nodemon": "^3.1.11",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  }
}
